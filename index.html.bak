  <!-- Main Content -->
  <main>
    <header class="hero">
      <h1 id="main-title">Interactive 2D & 3D Canvases</h1>
      <p class="hero-subtitle">Exploring creative coding and data visualization</p>
    </header>

    <div class="main-content">
      <div class="canvas-grid">
        <!-- Row 1 -->
        <div class="canvas-row">
          <!-- Canvas 1: Static Glass Squares -->
          <div class="canvas-item">
            <div class="canvas-container">
              <div id="sketch1-container"></div>
            </div>
            <div class="canvas-info">
              <h3>Static Glass Squares</h3>
              <p class="canvas-description">A minimalist composition of translucent squares creating depth through overlapping layers and subtle shadows.</p>
            </div>
          </div>
          
          <!-- Canvas 2: Interactive Blood Cells -->
          <div class="canvas-item">
            <div class="canvas-container">
              <div id="sketch2-container"></div>
            </div>
            <div class="canvas-info">
              <h3>Interactive Blood Cells</h3>
              <p class="canvas-description">A dynamic simulation of blood cells flowing through a microscopic environment with realistic physics.</p>
            </div>
          </div>
        </div>
        
        <!-- Row 2 -->
        <div class="canvas-row">
          <!-- Canvas 4: Splitting Cube -->
          <div class="canvas-item">
            <div class="canvas-container">
              <div id="splitting-cube-container"></div>
            </div>
            <div class="canvas-info">
              <h3>Geometric Deconstruction</h3>
              <p class="canvas-description">A mesmerizing display of geometric patterns emerging from the transformation of a simple cube into complex forms.</p>
            </div>
          </div>
          
          <!-- 3D Model -->
          <div class="canvas-item">
            <div class="canvas-container">
              <div id="monkey-container" style="width: 100%; height: 100%; position: relative;">
                <!-- 3D model will be rendered here -->
              </div>
            </div>
            <div class="canvas-info">
              <h3>3D Model</h3>
              <p class="canvas-description">An interactive 3D model with dynamic rendering.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

